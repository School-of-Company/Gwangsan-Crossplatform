{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@/app/*": ["src/app/*"],
      "@/shared/*": ["src/shared/*"],
      "@/entity/*": ["src/entity/*"],
      "@/view/*": ["src/view/*"],
      "@/widget/*": ["src/widget/*"],
    }
  }
}
